<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jonathansun5.eatmeet">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity" />
        <activity android:name=".UserNameActivity" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme" />
        <activity android:name=".PersonalActivity" />
        <activity android:name=".AllergyActivity" />
        <activity android:name=".CircleActivity" />
        <activity android:name=".GroupNullActivity" />
        <activity android:name=".AnotherLocationActivity" />
        <activity android:name=".SetLocationActivity" />
        <activity android:name=".MaptoGroupActivity" />
        <activity android:name=".SearchingMapActivity" />
        <activity
            android:name=".CommentFeedActivity"
            android:label="@string/title_activity_comment_feed_activity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

            <!-- makes this the first activity presented on app launch. -->
            <!-- you will want to move this intent filter to a different activity later -->

        </activity>
    </application>

</manifest>